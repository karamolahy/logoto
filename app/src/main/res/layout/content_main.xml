<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layoutDirection="rtl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.radicloud.logoto.MainActivity"
    tools:showIn="@layout/activity_main">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:id="@+id/editText"
        android:hint="نام و نام خانوادگی"/>
    <EditText

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mobile"
        android:layoutDirection="rtl"
        android:layout_below="@+id/editText"
        android:inputType="phone"
        android:hint="موبایل"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:layoutDirection="rtl"
        android:layout_below="@+id/mobile"
        android:inputType="textEmailAddress"
        android:hint="ایمیل"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phone"
        android:layoutDirection="rtl"
        android:layout_below="@+id/email"
        android:inputType="phone"
        android:hint="تلفن"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fax"
        android:layoutDirection="rtl"
        android:layout_below="@+id/phone"
        android:inputType="phone"
        android:hint="فکس"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add"
        android:layoutDirection="rtl"
        android:layout_below="@+id/fax"
        android:inputType="textImeMultiLine"
        android:hint="آدرس"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/job"
        android:layoutDirection="rtl"
        android:layout_below="@+id/add"

        android:hint="شغل"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@android:color/white"
        android:layout_below="@+id/job"
        android:id="@+id/view1"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:id="@+id/resume"
        android:layout_below="@+id/view1"
        android:gravity="center"
        android:text="بارگذاری رزومه"
        android:background="@android:color/holo_blue_dark"
        android:onClick="browse"
        android:textColor="#ffffff"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@android:color/white"
        android:layout_below="@+id/resume"
        android:id="@+id/view"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:gravity="center"
        android:text="مرحله بعد"
        android:background="@android:color/holo_blue_dark"
        android:textColor="#ffffff"
        android:onClick="saveDb"
        android:id="@+id/next" />




</RelativeLayout>
